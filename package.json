{
  "name": "rijanbox",
  "version": "1.1.0",
  "description": "Multi-messenger app - Manage unlimited social media accounts in one secure, lightweight desktop app",
  "main": "dist/main/main.js",
  "author": {
    "name": "Rijanara",
    "email": "teguhrijanandi02@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/rijanara/rijanbox",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.rijanara.rijanbox",
    "productName": "RijanBox",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "src/data/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Network;InstantMessaging",
      "desktop": {
        "StartupWMClass": "RijanBox"
      }
    }
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.6.0"
  }
}